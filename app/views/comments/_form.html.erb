<%= form_for( @new_comment, :url => article_comments_path(@article.id), :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="control-group">
    <%= f.label :commenter, "Commenter:", :class => 'control-label' %>
    <div class = "controls">
      <%= f.text_field :commenter, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :comment, "Comment:", :class => 'control-label' %>
    <div class= "controls">
      <%= f.text_area :comment, rows: 4, :class => 'input-xlarge' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn-small btn-primary' %>
  </div>
<%end%>
