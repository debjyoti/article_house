<% if (comment.id ) then %>
  <div class="well" id="comment_<%=comment.id.to_s%>">
    <dt>
    <%= sanitize comment.commenter %> :
    </dt>
    <dd>
    <%= sanitize comment.comment %> </br></br>
    <div >
      <% if can? :edit, @comment %>
        <% if current_user.role=='admin' or comment.user_email == current_user.email %> <!--# TBD: fix cancan and remove this line-->
          <%= link_to 'edit', edit_article_comment_path(comment.article.id, comment.id), :class => 'btn', :remote => :true %>
        <% end %>
      <% end %>
      <% if can? :destroy, @comment %>
        <%= link_to 'delete', article_comment_path(comment.article.id, comment.id), :method => 'delete', :class => 'btn btn-danger' %>
      <%end%>
    </div>
    </dd>
  </div>
<% end %>
